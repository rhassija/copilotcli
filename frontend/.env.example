# Frontend Environment Configuration
# Copy this file to .env.local and fill in your values
# Note: NEXT_PUBLIC_* variables are exposed to the browser

# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Application Settings
NEXT_PUBLIC_APP_NAME="Copilot CLI Web UI"
NEXT_PUBLIC_APP_VERSION=0.1.0

# Feature Flags
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Session Configuration
# These are handled by backend, but can be referenced for client-side logic
NEXT_PUBLIC_SESSION_TIMEOUT_MINUTES=30

# Development Settings
# Set to 'development' or 'production'
NODE_ENV=development

# GitHub Integration
# Note: GitHub tokens should NEVER be stored in .env files
# They are managed at runtime via sessionStorage (cleared on tab close)
# This is a placeholder for documentation purposes only
# GITHUB_TOKEN is NOT used in frontend - it's passed from backend

# Optional: Analytics/Monitoring (for future use)
# NEXT_PUBLIC_GA_TRACKING_ID=
# NEXT_PUBLIC_SENTRY_DSN=

# Optional: Custom Backend Configuration (for deployment)
# Override API_BASE_URL and WS_URL for production environments
# Example:
# NEXT_PUBLIC_API_BASE_URL=https://api.copilot-ui.example.com
# NEXT_PUBLIC_WS_URL=wss://api.copilot-ui.example.com/ws
